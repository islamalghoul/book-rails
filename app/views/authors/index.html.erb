<h1>All Authors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.email %></td>
        <td>
          <% if current_auther == author %>
            <%= link_to 'Show Details', author_path(author), class: 'btn btn-info' %>
        
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
