<% if flash[:success]%>

<%= flash[:success]%>
<%end%>

<div class="jumbotron text-center">
  <h1 class="display-4">
    <%= @book.name %>
  </h1>
  <p class="lead">
    Release Date: <%= @book.release_date.strftime("%Y-%m-%d") %>
  </p>
  <p class="lead">
    Author: <%= @book.auther.name %>
  </p>

  <%= link_to 'Show', @book, class: "btn btn-secondary" %>

  <%= link_to 'Delete', @book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

  <%= link_to 'Back', books_path, class: "btn btn-dark" %>
</div>





<%else%>
<script>
    window.location.href = '<%= new_auther_session_path %>';
  </script>
<% end %>

